{
  "manifest_version": 2,
  "name": "DownAllPics&Vids",
  "short_name": "DAP&V",
  "version": "1.0",
  "author": "Paul Bournat",

  "description": "Open pictures and videos in tabs and download them all at once",
  "icons": {
    "128": "icons/button-128.png"
  },

  "browser_action": {
    "default_icon": {
      "128": "icons/button-128.png"
    },
    "default_title": "DownAllPics&Vids"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": ["<all_urls>", "downloads", "tabs"]
}
